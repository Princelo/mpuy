{% extends 'AcmeAdminBundle:default:layout.html.twig' %}

{% block body %}
<link rel="stylesheet" href="{{ asset('bundles/app/PhotoSwipe/photoswipe.css') }}">
<!-- Skin CSS file (styling of UI - buttons, caption, etc.)
     In the folder of skin CSS file there are also:
     - .png and .svg icons sprite,
     - preloader.gif (for browsers that do not support CSS animations) -->
<link rel="stylesheet" href="{{ asset('bundles/app/PhotoSwipe/default-skin/default-skin.css') }}">

<!-- Core JS file -->
<script src="{{ asset('bundles/app/PhotoSwipe/photoswipe.min.js') }}"></script>

<!-- UI JS file -->
<script src="{{ asset('bundles/app/PhotoSwipe/photoswipe-ui-default.min.js') }}"></script>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">竞拍日志</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="alert alert-success" id="success-bar" style="display:none;">
        {% if flash is defined %}
            {% if flash.state == 'success' %}
                {{ flash.message }}
            {% endif %}
        {% endif %}
    </div>
    <div class="alert alert-danger" id="error-bar" style="display: none;">
        {% if flash is defined %}
            {% if flash.state == 'error' %}
                {{ flash.message }}
            {% endif %}
        {% endif %}
    </div>
    {% if flash is defined %}
        {% if flash.state == 'success' %}
            <script>
                $('#success-bar').show();
                setTimeout(function(){$('#success-bar').fadeOut()}, 3000)
            </script>
        {% endif %}
        {% if flash.state == 'error' %}
            <script>
                $('#error-bar').show();
                setTimeout(function(){$('#error-bar').fadeOut()}, 3000)
            </script>
        {% endif %}
    {% endif %}
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    DataTables Advanced Tables
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                            <tr>
                                <th>拍品</th>
                                <th>拍品主</th>
                                <th>拍家</th>
                                <th>拍价</th>
                                <th>时间</th>
                                <th>竞拍状态</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for p in pagination %}
                            <tr>
                                <td>
                                    <a href="javascript:void(0);" onclick="photoswipe_action{{ p.product.id }}(0)">
                                        {% set imgSrc = '/attachments/wechat_img/' ~ p.product.imgCover.id %}
                                        <img src="{{ imgSrc | imagine_filter('thumb80') }}" />
                                    </a>
                                    {{ p.product.name }} {{ p.product.intro[:24]~'...' }}
                                </td>
                                <td><img src="{{ p.receiveUser.avatar }}" style="width: 50px; height:50px;" /> {{ p.receiveUser.nickname }}</td>
                                <td><img src="{{ p.payUser.avatar }}" style="width: 50px; height:50px;" /> {{ p.payUser.nickname }}</td>
                                <td>{{ p.volume }}元</td>
                                <td>{{ p.payTime|date('Y-m-d H:i:s') }}</td>
                                <td>
                                    {% if p.product.expireTime|date('U')>'now'|date('U') %}
                                        竞拍进行中 结束时间: {{ p.product.expireTime|date('m-d_H:i') }}
                                    {% else %}
                                        竞拍已结束 结束时间: {{ p.product.expireTime|date('m-d_H:i') }}
                                    {% endif %}
                                </td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <div class="navigation">
                            {{ knp_pagination_render(pagination) }}
                        </div>
                        <!-- Root element of PhotoSwipe. Must have class pswp. -->
                        <div class="pswp" tabindex="-1" role="dialog" aria-hidden="true">

                            <!-- Background of PhotoSwipe.
                                 It's a separate element as animating opacity is faster than rgba(). -->
                            <div class="pswp__bg"></div>

                            <!-- Slides wrapper with overflow:hidden. -->
                            <div class="pswp__scroll-wrap">

                                <!-- Container that holds slides.
                                    PhotoSwipe keeps only 3 of them in the DOM to save memory.
                                    Don't modify these 3 pswp__item elements, data is added later on. -->
                                <div class="pswp__container">
                                    <div class="pswp__item"></div>
                                    <div class="pswp__item"></div>
                                    <div class="pswp__item"></div>
                                </div>

                                <!-- Default (PhotoSwipeUI_Default) interface on top of sliding area. Can be changed. -->
                                <div class="pswp__ui pswp__ui--hidden">

                                    <div class="pswp__top-bar">

                                        <!--  Controls are self-explanatory. Order can be changed. -->

                                        <div class="pswp__counter"></div>

                                        <button class="pswp__button pswp__button--close" title="Close (Esc)"></button>

                                        <button class="pswp__button pswp__button--share" title="Share"></button>

                                        <button class="pswp__button pswp__button--fs" title="Toggle fullscreen"></button>

                                        <button class="pswp__button pswp__button--zoom" title="Zoom in/out"></button>

                                        <!-- Preloader demo http://codepen.io/dimsemenov/pen/yyBWoR -->
                                        <!-- element will get class pswp__preloader--active when preloader is running -->
                                        <div class="pswp__preloader">
                                            <div class="pswp__preloader__icn">
                                              <div class="pswp__preloader__cut">
                                                <div class="pswp__preloader__donut"></div>
                                              </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="pswp__share-modal pswp__share-modal--hidden pswp__single-tap">
                                        <div class="pswp__share-tooltip"></div>
                                    </div>

                                    <button class="pswp__button pswp__button--arrow--left" title="Previous (arrow left)">
                                    </button>

                                    <button class="pswp__button pswp__button--arrow--right" title="Next (arrow right)">
                                    </button>

                                    <div class="pswp__caption">
                                        <div class="pswp__caption__center"></div>
                                    </div>

                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
<!-- /.col-lg-12 -->
</div>
</div>
<!-- /#page-wrapper -->
<!-- /#wrapper -->
</div>
{% endblock %}
{% block javascripts %}
    {% for p in pagination %}
        <script>
            var photoswipe_action{{ p.product.id }} = function(i) {
                var pswpElement = document.querySelectorAll('.pswp')[0];

                // build items array
                var items = [];
                {% for i in p.product.images %}
                items[{{ loop.index0 }}] = {src: 'http://ct-life.cn/web/attachments/wechat_img/{{ i.id }}', w: 600, h:400};
                {% endfor %}
                // define options (if needed)
                var options = {
                    // optionName: 'option value'
                    // for example:
                    shareEl: false,
                    zoomEl: true,
                    index: i // start at first slide
                };

                // Initializes and opens PhotoSwipe
                var gallery = new PhotoSwipe( pswpElement, PhotoSwipeUI_Default, items, options);
                gallery.init();
                return false;
            }
        </script>
    {% endfor %}
{% endblock %}
{% extends 'layout.html.twig' %}

{% block body %}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">会员列表</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="alert alert-success" id="success-bar" style="display:none;">
        {% if flash is defined %}
            {% if flash.state == 'success' %}
                {{ flash.message }}
            {% endif %}
        {% endif %}
    </div>
    <div class="alert alert-danger" id="error-bar" style="display: none;">
        {% if flash is defined %}
            {% if flash.state == 'error' %}
                {{ flash.message }}
            {% endif %}
        {% endif %}
    </div>
    {% if flash is defined %}
        {% if flash.state == 'success' %}
            <script>
                $('#success-bar').show();
                setTimeout(function(){$('#success-bar').fadeOut()}, 3000)
            </script>
        {% endif %}
        {% if flash.state == 'error' %}
            <script>
                $('#error-bar').show();
                setTimeout(function(){$('#error-bar').fadeOut()}, 3000)
            </script>
        {% endif %}
    {% endif %}
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    DataTables Advanced Tables
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                            <tr>
                                <th>会员名</th>
                                <th>头像</th>
                                <th>手机</th>
                                <th>所在地</th>
                                <th>性別</th>
                                <th>粉丝数</th>
                                <th>关注数</th>
                                <th>买入订单数</th>
                                <th>拍品数</th>
                                <th>注册时间</th>
                                <th>最后登录</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for u in pagination %}
                            <tr>
                                <td>{{ u.nickname }}</td>
                                <td><img src="{{ u.avatar }}" style="width: 50px; height: 50px;"/></td>
                                <td>{{ u.mobile }}</td>
                                <td>{{ u.country }} {{ u.province }} {{ u.city }}</td>
                                <td>{% if u.gender == 1 %}男{% elseif u.gender == 2 %}女{% else %}未知{% endif %}</td>
                                <td>{{ u.fansCount }}人</td>
                                <td>{{ u.followCount }}人</td>
                                <td>{{ u.boughtCount }}</td>
                                <td>{{ u.soldCount }}</td>
                                <td>{{ u.createTime|date('Y-m-d H:i:s') }}</td>
                                <td>{{ u.lastLogin|date('Y-m-d H:i:s') }}</td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
<!-- /.col-lg-12 -->
</div>
</div>
<!-- /#page-wrapper -->
<!-- /#wrapper -->
</div>
{% endblock %}
{% block javascripts %}
<script>
    $(document).ready(function() {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>
{% endblock %}